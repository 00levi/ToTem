<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hentai_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    tools:openDrawer="start">

    <include
        layout="@layout/navigation_hentai"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <FrameLayout
        android:id="@+id/customViewContainer_hen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv_hen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorPrimary">

        <Button
            android:id="@+id/change_button_hen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="@string/change_anime"
            android:textColor="@color/colorAccentHen"/>

        <TextView
            android:id="@+id/genres_text_hen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genres"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:paddingTop="100sp"
            android:paddingStart="@dimen/default_gap"
            android:paddingEnd="@dimen/default_gap"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/genres_list_hen"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:layout_marginTop="150sp"
            android:layout_marginBottom="50sp" />

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>