<?xml version="1.0" encoding="utf-8"?>
<com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rfab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rfal_frame_color="@color/colorPrimary"
    app:rfal_frame_alpha="0.7">

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
        android:id="@+id/rfab_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:rfab_size="normal"
        app:rfab_color_normal="@color/colorAccent"
        app:rfab_color_pressed="#009f73"
        app:rfab_drawable="@drawable/ic_add_black_24dp"/>

</com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>