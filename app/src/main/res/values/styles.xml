<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>
    <!-- Hentai theme. -->
    <style name="AppThemeHentai" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryHen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHen</item>
        <item name="colorAccent">@color/colorAccentHen</item>
        <item name="backgroundColor">@color/colorPrimaryDarkHen</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorPrimaryDarkHen</item>
        <item name="android:colorBackground">@color/colorPrimaryDarkHen</item>
    </style>

</resources>
