<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.AnimeApp">
        <activity
            android:name=".view.EpisodesActivity"
            android:exported="false" />
        <activity
            android:name=".view.VideoPlayerActivity"
            android:theme="@style/Theme.AnimeApp.FullScreen"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".view.AnimeDetailActivity"
            android:label="Detalles del Anime" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>